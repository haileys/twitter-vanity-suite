#!/usr/bin/env ruby
require_relative "../lib-internal/common"

ids = $stdin.readlines.map(&:chomp).reverse

64.times.map {
  Thread.start do
    while id = ids.pop
      begin
        client.destroy_status(id)
      rescue Twitter::Error::NotFound
      rescue
        $stderr.puts "\rERROR: #{id}"
      end
      print "\r%5d" % ids.size
    end
  end
}.each(&:join)

puts
